<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.nwu.user.mapper.SectionMapper">
    <select id="getVideoListByChapterId" parameterType="Long" resultType="String">
        select distinct video_id
        from section
        where chapter_id=#{id} and video_id is not null
    </select>
    <select id="getVideoListByCourseId" parameterType="Long" resultType="String">
        select distinct video_id
        from section
        where course_id=#{id} and video_id is not null
    </select>
</mapper>
